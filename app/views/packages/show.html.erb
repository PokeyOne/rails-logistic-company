<h1 class="text-3xl mt-8 mb-2 font-bold"> Package <%= @package.id %>: <%= @package.name %> </h1>

<div class="container my-8 content-start flex">
  <div class="mr-8">
    <b class="uppercase">To</b>
    <div class="uppercase text-slate-700">
      <% @package.to_address.full_address_lines.each do |line| %>
        <%= line %><br/>
      <% end %>
    </div>
  </div>

  <div class="ml-8">
    <b class="uppercase">From</b>
    <div class="uppercase text-slate-700">
      <% @package.from_address.full_address_lines.each do |line| %>
        <%= line %><br/>
      <% end %>
    </div>
  </div>
</div>

<table class="border-collapse border border-slate-500">
  <tr>
    <td class="border border-slate-200 bg-slate-100 p-2 uppercase font-bold">ID</td>
    <td class="border border-slate-200 p-2"><%= @package.id %>
  </tr>
  <tr>
    <td class="border border-slate-200 bg-slate-200 p-2 uppercase font-bold">Name</td>
    <td class="border border-slate-200 bg-slate-100 p-2"><%= @package.name %>
  </tr>
  <tr>
    <td class="border border-slate-200 bg-slate-100 p-2 uppercase font-bold">State</td>
    <td class="border border-slate-200 p-2"><%= @package.state %>
  </tr>
  <tr>
    <td class="border border-slate-200 bg-slate-200 p-2 uppercase font-bold">Created</td>
    <td class="border border-slate-200 bg-slate-100 p-2"><%= @package.created_at %>
  </tr>
  <tr>
    <td class="border border-slate-200 bg-slate-100 p-2 uppercase font-bold">Updated</td>
    <td class="border border-slate-200 p-2"><%= @package.updated_at %>
  </tr>
  <tr>
    <td class="border border-slate-200 bg-slate-200 p-2 uppercase font-bold">Edit</td>
    <td class="border border-slate-200 bg-slate-100 p-2"><%= link_to 'Edit', edit_package_path(@package) %>
  </tr>
</table>

<div class="mt-8">
  <%= link_to "EDIT", edit_package_path(@package), class: "btn-primary" %>
  <%= link_to "DELETE", package_path(@package), data: {
      turbo_method: "delete",
      turbo_confirm: "Are you sure you want to delete this package?"
  }, class: "btn-destructive" %>
</div>
