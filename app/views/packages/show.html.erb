<h1> Package <%= @package.id %>: <%= @package.name %> </h1>

<div>
  <div class="address-container">
    <b>TO</b>
    <div class="address">
      <% @package.to_address.full_address_lines.each do |line| %>
        <%= line %><br/>
      <% end %>
    </div>
  </div>

  <div class="address-container">
    <b>FROM</b>
    <div class="address">
      <% @package.from_address.full_address_lines.each do |line| %>
        <%= line %><br/>
      <% end %>
    </div>
  </div>
</div>

<table class="package-list">
  <tr class="package-list-row">
    <td class="package-list-data">ID</td>
    <td class="package-list-data"><%= @package.id %>
  </tr>
  <tr class="package-list-row">
    <td class="package-list-data">Name</td>
    <td class="package-list-data"><%= @package.name %>
  </tr>
  <tr class="package-list-row">
    <td class="package-list-data">State</td>
    <td class="package-list-data"><%= @package.state %>
  </tr>
  <tr class="package-list-row">
    <td class="package-list-data">Created</td>
    <td class="package-list-data"><%= @package.created_at %>
  </tr>
  <tr class="package-list-row">
    <td class="package-list-data">Updated</td>
    <td class="package-list-data"><%= @package.updated_at %>
  </tr>
  <tr class="package-list-row">
    <td class="package-list-data">Edit</td>
    <td class="package-list-data"><%= link_to 'Edit', edit_package_path(@package) %>
  </tr>
  <tr class="package-list-row">
    <td class="package-list-data">Delete</td>
    <td class="package-list-data">
      <%= link_to "Destroy", package_path(@package), data: {
        turbo_method: "delete",
        turbo_confirm: "Are you sure you want to delete this package?"
      } %>
    </td>
  </tr>
</table>